{
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.highlightModifiedTabs": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "editor.fontSize": 13,
    "files.trimTrailingWhitespace": true,
    "editor.wordWrap": "on",
    "editor.formatOnPaste": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.snippetSuggestions": "top",
    "workbench.colorTheme": "Monokai",
    "editor.renderWhitespace": "boundary",
    "workbench.iconTheme": "vscode-icons",
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.rulers": [120], // Display a guide to show the 'max' line-length
    // Enable suggestions for CSS classes without needing to toggle Intellisense (https://github.com/ecmel/vscode-html-css/issues/72).
    "editor.quickSuggestions": { "other": true, "comments": false, "strings": true },
    "terminal.integrated.fontFamily": "MesloLGS NF", // Font for Powerlevel10k (https://github.com/romkatv/powerlevel10k#manual-font-installation)
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "explorer.confirmDragAndDrop": false,
    "editor.suggestSelection": "first",
    "workbench.editor.untitled.hint": "hidden",

    "python.languageServer": "Pylance",

    "cmake.configureOnOpen": true,
    "c-cpp-flylint.flexelint.enable": false,

    "js/ts.implicitProjectConfig.checkJs": true,

    "html.format.indentHandlebars": true,
    "html.format.maxPreserveNewLines": 1,
    "html.format.templating": true,
    "html.format.extraLiners": "",

    // https://marketplace.visualstudio.com/items?itemName=ecmel.vscode-html-css
    "css.enabledLanguages": ["html", "njk"],
    "css.styleSheets": ["https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"],
    "css.validation": {
        "id": false,
        "class": false
    },

    "prettier.printWidth": 120,
    "prettier.singleQuote": true,
    "prettier.jsxBracketSameLine": true,
    "prettier.tabWidth": 4,
    "prettier.disableLanguages": ["html", "vue", "md"],

    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[markdown]": {
        "files.trimTrailingWhitespace": false,
        "editor.formatOnSave": false
    },
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": false
    },
    "[csv (pipe)]": {
        "editor.rulers": [38]
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "emmet.includeLanguages": {
        "njk": "html"
    },

    "files.associations": {
        "*.dict": "csv (pipe)"
    },
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
    "vsicons.associations.files": [{ "icon": "nunjucks", "extensions": ["njk"], "format": "svg" }],

    "liveServer.settings.donotShowInfoMsg": true,
    "vsicons.dontShowNewVersionMessage": true,

    "languageToolLinter.languageTool.motherTongue": "de-DE",
    "languageToolLinter.languageTool.preferredVariants": "en-GB,de-DE",
    "languageToolLinter.lintOnOpen": true
}
